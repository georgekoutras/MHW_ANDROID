<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMeasurements">

    <RelativeLayout
        android:id="@+id/measurements_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/measurements_date_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:drawableTint="@color/basic_color"
            />
        <ImageView
            android:id="@+id/prev_date"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_arrow_left_24"
            android:tint="@color/basic_color"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/measurements_date_field"
            />

        <ImageView
            android:id="@+id/next_date"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_arrow_right_24"
            android:tint="@color/basic_color"
            android:clickable="true"
            android:focusable="true"
            android:layout_toRightOf="@id/measurements_date_field"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_shape"
        android:layout_below="@id/measurements_date"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <RelativeLayout
            android:id="@+id/stress_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/stress_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/stress_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="italic|bold"
                    android:text="@string/stress_link"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/stress_measurement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_below="@id/stress_info">
                <RelativeLayout
                    android:id="@+id/stress_icon_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/img_stress"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_stress"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/stress_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/stress_icon_set"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/stress_measurement_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stress_heading"
            android:visibility="gone">
            <TextView
                android:id="@+id/total_stress_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:text="@string/stress_list_heading"
                android:layout_marginTop="5dp"
                />
            <RelativeLayout
                android:id="@+id/stress_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/total_stress_title"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/total_stress_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/total_stress_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/total_stress_data"
                    />
            </RelativeLayout>

            <ToggleButton
                android:id="@+id/btnDaynight"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/daynight_button"
                android:backgroundTint="@color/basic_color"
                android:paddingTop="30sp"
                android:textOn=""
                android:textOff="" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart1"
                android:layout_below="@id/stress_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>