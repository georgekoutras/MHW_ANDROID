<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_p2_desc"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/btn_reg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="30dp"
            android:gravity="center"
            android:drawableStart="@drawable/ic_baseline_chevron_left_24"
            android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
            android:drawableTint="@color/basic_color"
            android:paddingStart="30dp"
            />
        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:padding="@dimen/btn_horizontal_margin"
            android:background="@drawable/default_button"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/btn_reg_back"
            android:layout_toRightOf="@id/btn_reg_back" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/edit_account_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_subtitle"
        android:layout_above="@id/bottom_buttons">

        <RelativeLayout
            android:id="@+id/scroll_view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/first_name_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/first_name_field"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingLeft="15dp"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:inputType="text"
                    android:background="@drawable/et_custom"
                     />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_name"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/register_email_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/surname"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/last_name_field"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingLeft="15dp"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:inputType="text"
                    android:background="@drawable/et_custom"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_name"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/birth_date_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/birth_date_field"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingLeft="15dp"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:inputType="text"
                    android:background="@drawable/et_custom"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/reg2_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_p2_desc2"
                android:textSize="15sp"
                android:layout_below="@id/birth_date"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp" />
            <RelativeLayout
                android:id="@+id/reg_checkbox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg2_desc2"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/heartrate_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/heartrate_checkbox"
                    android:src="@drawable/icon_heartrate"
                    android:layout_toEndOf="@id/heartrate_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/heartrate"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img1"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reg_checkbox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_checkbox1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/presure_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/presure_checkbox"
                    android:src="@drawable/icon_presure"
                    android:layout_toEndOf="@id/presure_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/presure"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img2"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reg_checkbox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_checkbox2"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/pulseox_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/pulseox_checkbox"
                    android:src="@drawable/icon_pulseox"
                    android:layout_toEndOf="@id/pulseox_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/pulseOx"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img3"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reg_checkbox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_checkbox3"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/glucometer_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/glucometer_checkbox"
                    android:src="@drawable/icon_glucometer"
                    android:layout_toEndOf="@id/glucometer_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img4Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/glucometer"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img4"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reg_checkbox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_checkbox4"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/stress_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/stress_checkbox"
                    android:src="@drawable/icon_stress"
                    android:layout_toEndOf="@id/stress_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img5Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/stress"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img5"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reg_checkbox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_checkbox5"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/cough_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/cough_checkbox"
                    android:src="@drawable/icon_cough"
                    android:layout_toEndOf="@id/cough_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img6Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/cough"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img6"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>