<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/item2_desc"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="@dimen/ob_desc_padding"
                android:paddingRight="@dimen/ob_desc_padding"
                android:text="@string/item3_desc"
                android:textColor="@color/ob_desc"
                android:textSize="@dimen/onboard_desc_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/health_line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_heartrate"
                    />

                <TextView
                    android:id="@+id/img1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/heartrate"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/health_line_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_pulseox"
                    />

                <TextView
                    android:id="@+id/img7Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/pulseOx"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/health_line_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/garmin_bg"
                    />
                <TextView
                    android:id="@+id/img8Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img8"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/smartwatch"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/ob_desc_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>