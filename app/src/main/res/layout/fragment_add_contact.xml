<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMeasurements"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/add_contact_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/contact_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/add_contact_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/add_contact"/>
                <TextView
                    android:id="@+id/add_contact_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/add_contact_title"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="@string/contact_details_subtitle"
                    android:layout_marginTop="5dp"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_send_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_invitation"
        android:padding="@dimen/btn_horizontal_margin"
        android:background="@drawable/default_button"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <ScrollView
        android:id="@+id/edit_account_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_contact_heading"
        android:layout_above="@id/btn_send_invitation"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_shape"
            android:layout_below="@id/add_contact_heading"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/full_name"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/contact_fullname_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/et_custom"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_gr"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/contact_email_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/et_custom"
                android:textSize="15sp"
                android:importantForAutofill="no" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/occupation"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>
            <Spinner
                android:id="@+id/choose_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_custom"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />
            <TextView
                android:id="@+id/reg2_desc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_contact_measurements_title"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                />

            <RelativeLayout
                android:id="@+id/reg_checkbox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg2_desc2"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/heartrate_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/heartrate_checkbox"
                    android:src="@drawable/icon_heartrate"
                    android:layout_toEndOf="@id/heartrate_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/heartrate"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img1"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reg_checkbox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_checkbox1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/presure_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/presure_checkbox"
                    android:src="@drawable/icon_presure"
                    android:layout_toEndOf="@id/presure_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/presure"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img2"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reg_checkbox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_checkbox2"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/pulseox_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/pulseox_checkbox"
                    android:src="@drawable/icon_pulseox"
                    android:layout_toEndOf="@id/pulseox_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/pulseOx"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img3"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reg_checkbox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_checkbox3"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/glucometer_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/glucometer_checkbox"
                    android:src="@drawable/icon_glucometer"
                    android:layout_toEndOf="@id/glucometer_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img4Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/glucometer"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img4"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reg_checkbox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_checkbox4"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/stress_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/stress_checkbox"
                    android:src="@drawable/icon_stress"
                    android:layout_toEndOf="@id/stress_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img5Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/stress"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img5"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reg_checkbox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_checkbox5"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">
                <CheckBox
                    android:id="@+id/cough_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/black"
                    />
                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/cough_checkbox"
                    android:src="@drawable/icon_cough"
                    android:layout_toEndOf="@id/cough_checkbox"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />
                <TextView
                    android:id="@+id/img6Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/cough"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    android:layout_toEndOf="@id/img6"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>