<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

       <LinearLayout
            android:id="@+id/item2_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="@dimen/ob_desc_padding"
                android:paddingRight="@dimen/ob_desc_padding"
                android:text="@string/item2_desc"
                android:textColor="@color/ob_desc"
                android:textSize="@dimen/onboard_desc_text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/health_line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_heartrate"
                    />

                <TextView
                    android:id="@+id/img1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/heartrate"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/health_line_2"
                android:layout_below="@id/health_line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_presure"
                    />

                <TextView
                    android:id="@+id/img2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/presure"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/health_line_3"
                android:layout_below="@id/health_line_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_pulseox"
                    />

                <TextView
                    android:id="@+id/img3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/pulseOx"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/health_line_4"
                android:layout_below="@id/health_line_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_glucometer"
                    />

                <TextView
                    android:id="@+id/img4Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/glucometer"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/health_line_5"
                android:layout_below="@id/health_line_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_stress"
                    />

                <TextView
                    android:id="@+id/img5Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/stress"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/health_line_6"
                android:layout_below="@id/health_line_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_cough"
                    />

                <TextView
                    android:id="@+id/img6Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/cough"
                    android:textColor="@color/ob_desc"
                    android:textSize="@dimen/onboard_desc_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>